# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
end_of_line = lf

[*.{js,ts,tsx,scss,json,yaml,yml}]
quote_type = single

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_size = 4
